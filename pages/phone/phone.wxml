<view class="warp">

<!--循环输出列表 begin-->
<view wx:for="{{phoneList}}" class="list" wx:for-index='id'>
  <view class="infos">
      <view class="title">{{item.name}}</view>
      <view catchtap="callmeTap" class="date"  data-phone="{{item.phonenumber}}">{{item.phonenumber}}</view>
    </view>
    <view class='borderline'></view>
</view>

<view bindtap="loadMore" data-lastid="{{lastid}}" data-isfrist="{{isfrist}}" class="loadMore" style="display:{{moreHidden}}">加载更多</view>
<toast hidden="{{toastHidden}}" bindchange="toastChange" duration="3000">{{msg}}</toast>
<modal title="温馨提示" no-cancel hidden="{{confirmHidden}}" confirm-text="明确" bindconfirm="modalChange">当前不在WiFi网络下，将使用数据流量</modal>
</view>

