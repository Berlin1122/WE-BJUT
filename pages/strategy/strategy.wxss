page{
    background: rgba(237, 243, 252, 0.986);
}

.passage{
  margin: 20rpx;
  font-size: 35rpx;
  font-weight: 600;
}

.nav{
  height:260rpx; 
  width:100%; 
  display: -webkit-box; 
  flex-direction: column;
  white-space: nowrap;
} 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.item{ 
  width: 40%; 
  height: auto;  
  flex: 1;
  display: inline-block;
  padding: 20rpx; 
}  

.item image{ 
  width: 100%; 
  height: 120rpx;
  border-radius: 20rpx;
  
  display: inline-block;

} 

.item text{
  margin-top: 20rpx;
  font-size: 28rpx;
  display: block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;

}


.blank{
  width: 100%;
  height: 90rpx;
  background-color: rgba(223, 234, 248, 0.986);
}
.tags{
  margin: 18rpx;
  padding-top: 0px;
  padding-bottom: 10px;
  box-sizing: border-box;
  border-radius: 15px;
  background-color: rgba(253, 253, 253, 0.5);
}
.title{
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: black;
}
.tags-btn{
  padding: 6rpx;
  margin-bottom: 0px;
  margin-top: 10px;
  margin-right: 0px; 
  margin-left: 15px;
}
.btn-default{
  border: 1px solid rgb(233, 232, 232);
  color: #333;
  background-color: #fff;
}
.round-btn{
  border-radius: 150rpx;
}
.btn-xs{
  font-size: 14rpx;
  line-height: 2;
}
.btn{
  display: inline-block;
  text-align: center;
  font-weight: 400;
  white-space: nowrap;
  vertical-align: middle;
  background-color: rgb(233, 232, 232);
}
.text-gray{
  align-content: center;
  color:black;
}
.text-sm{
  margin-left: 3px;
  margin-right: 3px;
  align-content: center;
  font-size: 24rpx;
  vertical-align: middle
}

.background1{
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.5);
}

