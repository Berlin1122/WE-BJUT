  font-size: 15px;
  font-weight: bold;
  color: black;
}
.tags-btn{
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 3px;
  padding-right: 3px;
  margin-bottom: 0px;
  margin-top: 10px;
  margin-right: 0px; 
  margin-left: 15px;
}
.btn-default{
  border: 1px solid rgb(233, 232, 232);
  color: #333;
  background-color: #fff;
}
.round-btn{
  border-radius: 150rpx;
}
.btn-xs{
  font-size: 7px;
  line-height: 2;
}
.btn{
  display: inline-block;
  text-align: center;
  font-weight: 400;
  white-space: nowrap;
  vertical-align: middle;
  background-color: rgb(233, 232, 232);
}
.text-gray{
  align-content: center;
  color:black;
}
.text-sm{
  margin-left: 3px;
  margin-right: 3px;
  align-content: center;
  font-size: 12px;
  vertical-align: middle
}
.badge{
  background: #17807d;
  opacity: 0.85;
  top: 0px;
  padding-top: 1px;
  padding-right: 5px;
  padding-bottom: 1px;
  padding-left: 5px;
  position: relative;
  color: #fff;
  display: inline-block;
  min-width: 10px;
