  border-radius: 150rpx;
}
.btn-xs{
  font-size: 14rpx;
  line-height: 2;
}
.btn{
  display: inline-block;
  text-align: center;
  font-weight: 400;
  white-space: nowrap;
  vertical-align: middle;
  background-color: rgb(233, 232, 232);
}
.text-gray{
  align-content: center;
  color:black;
}
.text-sm{
  margin-left: 3px;
  margin-right: 3px;
  align-content: center;
  font-size: 20rpx;
  vertical-align: middle
}
