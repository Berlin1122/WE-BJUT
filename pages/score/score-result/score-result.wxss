/* pages/score/score-result/score-result.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.tip{
  padding: 10rpx;
  color: grey;
  font-size: 8pt
}

.info-row{
  padding: 10rpx;
  margin-top: 5rpx;
  margin-left: 5rpx;
  border: 2px solid #0398e7;
  border-radius: 10rpx;
  width: 95%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
}

.no-score{
  align-self: center;
  font-size: 10pt;
  color: #0398e7;
}
