<!-- 轮播图 -->
<view class='change'>
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</view>

<!--功能图标 + 导航-->
<view class="nav">
  <block wx:for="{{student}}">
    <navigator url="{{item.src}}" class="item" hover-class="navHoverClass" hover-stay-time="200" >
      <image src="{{item.icon}}"></image>
      <view>\n</view>
      <text>{{item.title}}</text>
    </navigator>
  </block>
</view>


<!-- 机器人 -->
<button class='btn1'  
session-from="bot | {{nickName}} | {{avatarUrl}}"  open-type='contact'>
    <image src='../../images/jiqiren.png' mode="scaleToFill"></image>
    <text>向我吐槽</text>
 </button>
 

<!--卡片列表-->
<view class="main-card">
  <view class="main-card-item" >
   
    <view class="card-item-hd">
      <image class="card-item-icon" src="/images/gg.png"></image>
      <text class="card-item-name">公告</text>
    </view>

    <view class="card-item-open">
      <text class="card-item-bd">如果你觉得不错，欢迎推荐给身边的小伙伴，功能尚处在测试阶段。</text>
    </view>
   
  </view>
</view>

