.card-item-open{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7f848a;
  height: 150rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: -1rpx;
}

.room {
  height: 75rpx;
  padding-left: 30rpx;
  border-bottom:1px solid #e5e5e5;
  font-size: 15pt;
  line-height: 75rpx;
  letter-spacing: 1px;
  color: #acacac;
}

