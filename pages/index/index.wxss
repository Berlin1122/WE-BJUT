page{
    background: white;
}

swiper{
  height: 350rpx;
  width: 100%;
  box-sizing: border-box;
}
.slide-image{
  margin: 20rpx;
  width: 95%;
  height: 90%;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  border-radius: 20rpx;
  display: block;
}
.slide-text{
  font-size: 28rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin-bottom: 20rpx;
  color: white;
  font-weight: 580;
  position: absolute;
  margin-left: 35rpx;
  margin-right: 20rpx;
  background: rgba(172, 170, 170, 0.5);
  border-radius: 15rpx;
  display: block;
  /*margin-bottom: 20rpx;*/

}
.nav {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 0rpx;
  min-height: 180rpx;
  overflow: hidden;
}
.item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
  height: 160rpx;
}
.item image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx auto;
}
.item text{
  font-size: 28rpx;
  display: block;
  margin: 1rpx;
  text-align: center;
}



