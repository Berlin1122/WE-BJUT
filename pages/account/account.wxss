/*卡片列表*/
.main-card {
  padding-bottom: 300rpx;
}
.main-card-item{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  overflow: hidden;
}
.card-item-hd{
  position: relative;
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 30rpx;
}
.item-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.item-name{
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 2px;
  margin-left:20rpx;
}
.item-bd{
  padding: 20rpx 200rpx 20rpx 20rpx;
  font-size: 12pt;
  display: flex;
  flex-direction: column;
}
.card-info-hd{
  display: flex;
  justify-content: space-between;
}
.card-info-left{
  display: flex;
  flex-direction: column;
}
.card-info-right{
  display: flex;
  color: #acacac;
  flex-direction: column;
}
.card-item-open{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7f848a;
  height: 150rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: -1rpx;
}


/*form  */

.form-here{
  margin-top:10px;
  background-color:#ffffff;
  padding:20px 30px;
}

.form-password{
  margin-top:20px;
}
.submit{
  margin-top: 30px;
  margin-bottom: 30px;
  display:flex;
}
.sub-button{
  background-color: #4090FE;
  color:#ffffff;
  line-height:1.8;
  border-radius:30px;
  padding:5px 100px;
}

.section_image{
  width: 30%;
  height: 80%;
  margin-left: 80rpx;
}

.form{
  width: 100%;
}

.section__input{
  width: 75%;
  font-size: 14pt;
}


.background{
  height: 250px;
  margin: 0px;
  box-sizing: border-box;
  border-radius: 15px;
  
}

.info{ 
  font-size: 15px; 
  line-height: 2.5; 
  text-indent: 30px ;
}

.tags{
  margin-top: 0px;
  margin-left: 0px;
  margin-right: 0px;
  margin-bottom: 0px;
  padding-top: 5px;
  padding-bottom: 5px;
  box-sizing: border-box;
  
  border-bottom-width: 200px;
  display: flex;
  flex-direction: row;
  
  justify-content: space-between;
  align-items: center;
}

.title{
  color: #acacac;
}
.text{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-right: 30px;
}
.borderline{
  width: 360px;
  position: absolute;
  left: 50%;
  margin-left: -180px;
  background-color: #e5e5e5;
  height: 1rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}