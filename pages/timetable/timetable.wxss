/**index.wxss**/
.notice{
  height: 50rpx;
  width: 100%;
  background-color: rgb(252, 230, 204);
  font-size: 28rpx;
  font-weight: 580;
  display: flex;
  align-content: center;
  line-height: 50rpx;
  justify-content: center;

}

.container{
  width: 100%;
  height: 100%;
  background-color: white;
}

.flex-item {
  width: 100rpx;
  height: 100px;
  /*box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(143, 143, 143, 0.5);*/
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding-left: 2px;
  font-family: "等线";
}

.top {
  display: flex;
  flex-direction: row;
  margin-left: 0rpx;
  background-color: #0096C3;
 
  color: white;
}

.top-text {
  width: 125rpx;
  height: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  z-index: 101;
  height: 100%;
  width: 100%;
  display: flex;
  direction: column;
  position: relative;
}

.left {
  width: 35rpx;
  height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.round-click{
    height: 80rpx;
    width: 80rpx;
    color: white;
    font-size: 30rpx;
    font-weight: 500;
    background-color: #0096C3;
    border-radius: 100%;
    position: fixed;
    bottom: 50rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 130;
}
.round-click text{
  font-size: 14px;
  display: block;
  color: white;
  font-weight: 600;
}
.exercise-lesson-container{
  display: flex;
  direction: column;
  height: 20%;
  width: 93%;
  box-shadow: 0px 4rpx 16rpx 0px rgba(140, 160, 181, 0.2);
  border-radius: 12rpx;
  padding: 15rpx;
  margin: 5px;
  z-index: 140;
}
.exercise-lesson-container-item{
  font-size: 8pt;
}
.timetable-area{
  z-index: 100;

}

