/* pages/aboutme/aboutme.wxss */
.tags{
  margin-top: 20px;
  
  margin-left: 20px;
  margin-right: 20px;
  box-sizing: border-box; 
}

.tags-btn{
  padding-top: 3px;
  padding-bottom: 3px;
  padding-left: 10px;
  margin-bottom: 5px;
  margin-right: 2px; 
}
.btn-default{
  border: 1px solid #ddd;
  color: #333;
  background-color: #fff;
}
.round-btn{
  border-radius: 150rpx;
}
.btn-xs{
  padding-top: 1px;
  padding-right: 5px;
  font-size: 12px;
  line-height: 2;
}
.btn{
  display: inline-block;
  text-align: center;
  font-weight: 400;
  white-space: nowrap;
  vertical-align: middle;
}
.text-gray{
  color: #5a5a5a;
}
.text-sm{
  font-size: 18px;
  vertical-align: middle
}
.badge{
  background: #17807d;
  opacity: 0.85;
  top: 0px;
  padding-top: 1px;
  padding-right: 5px;
  padding-bottom: 1px;
  padding-left: 5px;
  position: relative;
  color: #fff;
  display: inline-block;
  min-width: 10px;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  border-radius: 150rpx;
}
.hide{
  display: none;
  box-sizing: border-box;
  margin-left: 20px;
}

.hide-border{
  margin-left: 20px;
}
