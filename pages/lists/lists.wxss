  margin: 20rpx;
  width: 95%;
  box-sizing: border-box;
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, 0.5);
  border-radius: 4px;
