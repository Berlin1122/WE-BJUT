}

.imgs image{
  display: block;
  width: 200rpx;
  height: 150rpx;
}

.infos{
  width: 400rpx;
  height: auto;
  margin-top: 5px;
  margin-left: 20px;
  margin-right: 20px;
  
}

.title{
