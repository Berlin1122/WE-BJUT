    /* components/Dialog/dialog.wxss */
.wx-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}
.wx-dialog{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  z-index: 5000;
  min-width: 200rpx;
  min-height: 200rpx;
  font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;
  /* letter-spacing: 0; */
  /* word-wrap: break-word; */
  background-color: #FFFFFF;
  /* text-align: center; */
  border-radius: 3px;
  overflow: hidden;
  box-sizing: border-box;

  animation-name:popup;
  animation-duration:0.2s;
  animation-timing-function:linear;
  animation-delay:0;
  animation-iteration-count:1;
  animation-direction:normal;

  display: flex;
  flex-direction: row;
}

@keyframes popup
{
  from{opacity:0;transform:scale(0.3,0.3);}
  to 	{opacity:1;transform:scale(1,1);}
}

/* 当前弹窗样式 */
.popup{
	width: 80%;
	height: 420rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(7, 204, 0, 0.5);
}
.content{
    padding: 5px;
    font-size: 10pt;
    display: flex;
    color:black;
}

